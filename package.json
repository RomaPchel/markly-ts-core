{
  "name": "marklie-ts-core",
  "version": "1.2.8",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx swc --strip-leading-paths --config-file .swcrc ./src -d dist && npm run generate:dts",
    "generate:dts": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "prettier:format": "pnpm exec prettier . --write",
    "prettier:check": "npx prettier . --check\n",
    "docker:up": "docker compose -f ../docker/compose.yaml up -d",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "watch": "pnpm docker:up & npx nodemon --config ./nodemon.json",
    "start:dev": "npm run watch",
    "publish:build": "pnpm build:all && pnpm publish",
    "migration:create": "node --loader ts-node/esm ./node_modules/.bin/mikro-orm migration:create",
    "migration:up": "node --loader ts-node/esm ./node_modules/.bin/mikro-orm migration:up",
    "migration:down": "node --loader ts-node/esm ./node_modules/.bin/mikro-orm migration:down"
  },
  "mikro-orm": {
    "configPaths": ["./src/db/config/mikro-orm.config.ts"]
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.11.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@google-cloud/storage": "^7.16.0",
    "@mikro-orm/core": "^6.4.15",
    "@mikro-orm/migrations": "^6.4.15",
    "@mikro-orm/postgresql": "^6.4.15",
    "@mikro-orm/reflection": "^6.4.15",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.48.1",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "path-to-regexp": "^8.2.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.15",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^22.10.10",
    "bcrypt": "^5.1.1",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^13.0.1",
    "prettier": "3.4.2",
    "typescript": "^5.7.3"
  }
}